            <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
         </padding>
      </HBox>
      <VBox alignment="TOP_CENTER" maxWidth="-Infinity" minHeight="600.0" minWidth="-Infinity" prefWidth="600.0" spacing="20.0" styleClass="main" stylesheets="@app-view.css">
