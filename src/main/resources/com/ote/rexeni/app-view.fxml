                        <Label fx:id="outputDir_label" minWidth="200.0" prefHeight="17.0" text="Ningún directorio seleccionado" textFill="#dfe1e8" HBox.hgrow="ALWAYS">
                            <opaqueInsets>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
